<Window x:Class="TileGameBoard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TileGameBoard"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Canvas x:Name="MyCanvas" Background="LightGray" AllowDrop="True"
            Drop="MyCanvas_Drop" DragOver="MyCanvas_DragOver"
                MouseMove="MyCanvas_MouseMove">
            <Rectangle x:Name="DraggableRectangle" Fill="Blue" Width="50" Height="50"
                   Canvas.Left="100" Canvas.Top="100"
                   MouseDown="DraggableShape_MouseDown"
                   MouseUp="DraggableShape_MouseUp"/>
            <Rectangle x:Name="DraggableRectangle2" Fill="Green" Width="50" Height="50"
                   Canvas.Left="200" Canvas.Top="100"
                   MouseDown="DraggableShape_MouseDown"
                   MouseUp="DraggableShape_MouseUp"/>
        </Canvas>
    </Grid>
</Window>
